@using Microsoft.AspNetCore.Mvc.Localization
@model UI.MVC.Models.RegisterSchoolViewModel
@inject IViewLocalizer _Localizer

@{
    ViewBag.Title = _Localizer["Modify Admin"];
    Layout = "_Layout";
}

<h2>@_Localizer["Change info"]</h2>
<form method="post" asp-action="ModifyAdmin">
    <hr/>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label>@_Localizer["School name"]</label>
        <input name="schoolName" type="text" value="@ViewBag.SchoolName" class="form-control"/>
    </div>
    <div class="form-group">
        <label>@_Localizer["Administrator email"]</label>
        <input name="email" type="email" value="@ViewBag.Email" class="form-control"/>
    </div>
    <div class="form-group">
        <label>@_Localizer["City"]</label>
        <input name="city" type="text" value="@ViewBag.City" class="form-control"/>
    </div>
    <div class="form-group">
        <label>@_Localizer["Zip"]</label>
        <input name="postalCode" type="text" value="@ViewBag.Postalcode" class="form-control"/>
    </div>
    <div class="form-group">
        <label>@_Localizer["Street and number"]</label>
        <input name="streetAndNumber" type="text" value="@ViewBag.StreetAndNumber"class="form-control"/>
    </div>
    <p class="text-danger">@ViewBag.Error</p>
    <button type="submit" class="btn btn-primary">@_Localizer["Update"]</button>
</form>

<button type="submit" class="btn btn-primary my-1" onclick="@("window.location.href='" + Url.Action("Index", "Admin") + "'")">@_Localizer["Return to dashboard"]</button>
