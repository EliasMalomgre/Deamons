@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _Localizer

@{
    ViewBag.Title = _Localizer["New Class"];
    Layout = "_Layout";
}

<h2 class="h2">@ViewBag.Title</h2>

<form asp-action="CreateClass">
    <input type="hidden" name="teacherId" value="@ViewBag.teacher">
    <div class="form-group">
        <label for="name">@_Localizer["Class name:"]</label>
        <input id="name" name="name" class="form-control" type="text">
    </div>
    <div class="form-group">
        <label for="amount">@_Localizer["Amount of students"]</label>
        <input id="amount" name="amount" class="form-control" type="number">
    </div>
    <div class="form-group">
        <label for="year">@_Localizer["Schoolyear"]</label>
        <input id="year" placeholder="2020-2021" pattern="^[0-9]{4}-[0-9]{4}$" name="year" class="form-control" type="text">
    </div>
    <input type="submit" class="btn btn-primary mb-2 mt-1">
</form>

<button type="submit" class="btn btn-primary mt-1" onclick="@("window.location.href='" + Url.Action("Index", "Teacher") + "'")">@_Localizer["Return to dashboard"]</button>
