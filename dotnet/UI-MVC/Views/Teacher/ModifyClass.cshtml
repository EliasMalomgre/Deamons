@using Microsoft.AspNetCore.Mvc.Localization
@model BL.Domain.Sessie.Class
@inject IViewLocalizer _Localizer

@{
    ViewBag.Title = _Localizer["Modify Class"];
    Layout = "_Layout";
}

<h2 class="h2">@ViewBag.Title</h2>

<form asp-action="ModifyClass">
    <input type="hidden" name="classId" value="@Model.Id">
    <div class="form-group">
        <label for="name">@_Localizer["Class name:"]</label>
        <input id="name" name="name" class="form-control" type="text" value="@Model.Name">
    </div>
    <div class="form-group">
        <label for="amount">@_Localizer["Amount of students"]</label>
        <input id="amount" name="amount" class="form-control" type="number" value="@Model.NumberOfStudents">
    </div>
    <div class="form-group">
        <label for="year">@_Localizer["Schoolyear"]</label>
        <input id="year" pattern="^[0-9]{4}-[0-9]{4}$" name="year" class="form-control" type="text" value="@Model.Year">
    </div>
    <input type="submit" class="btn btn-primary">
</form>

<button type="submit" class="btn btn-primary mt-1" onclick="@("window.location.href='" + Url.Action("Index", "Teacher") + "'")">@_Localizer["Return to dashboard"]</button>
