@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<BL.Domain.Test.Test>
@inject IViewLocalizer _Localizer

@{
    ViewBag.Title = _Localizer["Test List"];
    Layout = "_Layout";
}

<h2 class="h2">@ViewBag.Title</h2>

<a asp-action="CreateTest" class="btn btn-primary btn-lg mb-1">@_Localizer["New test"]</a>
<table class="table table-hover">
    <thead class="table-color">
    <tr>
        <th>@_Localizer["Title"]</th>
        <th>@_Localizer["Options"]</th>
    </tr>
    </thead>
    @foreach (var test in Model)
    {
        <tr>
            <td>@test.Title</td>
            <td>
                | <a asp-action="ModifyTest" asp-route-testId="@test.Id">@_Localizer["Modify"]</a>
                | <a asp-action="DeleteTest" asp-route-testId="@test.Id">@_Localizer["Delete"]</a>
                | <a asp-action="ShareTest" asp-route-testId="@test.Id">@_Localizer["Share"]</a>
            </td>
        </tr>
    }
</table>

<button type="submit" class="btn btn-primary" onclick="@("window.location.href='" + Url.Action("Index", "Teacher") + "'")">@_Localizer["Return to dashboard"]</button>
