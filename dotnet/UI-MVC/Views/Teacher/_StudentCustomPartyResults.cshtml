@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _Localizer

<table class="table">
    <tread>
        <tr>
            <th>#</th>
            <th>@_Localizer["Result"]</th>
        </tr>
    </tread>
    <tbody>
    @for (int i = 0; i < ViewBag.Students.Count; i++)
    {
        <tr>
            <th>@(i+1)</th>
            <td>@ViewBag.Students[i].Score</td>
        </tr>
    }
    </tbody>
</table>